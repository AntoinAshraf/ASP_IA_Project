@model ProjectIA_renting_Cars.ViewModels.UserCategoryViewModel
@{
    ViewBag.Title = "Regester";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Regestration</h2>

@using (Html.BeginForm()){

    <div class="form-group">
        @Html.LabelFor(u => u.User.Name)
        @Html.TextBoxFor(u => u.User.Name, new { @class = "form-control", placeholder = "Your Name" })
        @Html.ValidationMessageFor(u => u.User.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.User.SSN)
        @Html.TextBoxFor(u => u.User.SSN, new { @class = "form-control", Type = "number", placeholder = "Social Sequrity Number" })
        @Html.ValidationMessageFor(u => u.User.SSN)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.User.CategoryId)
        @Html.DropDownListFor(u => u.User.CategoryId, new SelectList(Model.categories, "Id", "category_Name"), "Choose Category", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.User.Email)
        @Html.TextBoxFor(u => u.User.Email, new { @class = "form-control" , type = "email", placeholder = "example@email.ru"})
        @Html.ValidationMessageFor(u => u.User.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.User.Password)
        @Html.TextBoxFor(u => u.User.Password, new { @class = "form-control", type = "password"})
        @Html.ValidationMessageFor(u => u.User.Password)
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.User.Date_Of_Birth)
        @Html.TextBoxFor(u => u.User.Date_Of_Birth, new { @class = "form-control", type = "date" })
    </div>

    <button type="submit" class="btn btn-primary">Regester</button>
}
